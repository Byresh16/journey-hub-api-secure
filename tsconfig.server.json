
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": [
    "server.ts",
    "src/server/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/pages",
    "src/components",
    "src/App.tsx",
    "src/main.tsx"
  ]
}
